pipeline{
    agent any
    stages{
        stage("checkout"){
            steps{
                git "https://github.com/shubh1sinha/OrderManagement.git"
            }
        }
        stage("compile"){
            steps{
            sh "mvn clean compile"
            }
        }
        
         stage("package"){
            steps{
            sh "mvn clean package"
            }
        }
        
        stage("docker_build"){
            steps{
            sh "docker build -t shubh1sinha/order-management:1.0 ."
            }
        }
		stage('Run') {

			steps {
				sh 'docker-compose up'
			}
		}
	}
    }
   
}